{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "args": [
                "--target_model=llama3-8b-q4km",
                "--n_requests=1",
                "--n_restarts=1",
                "--attack",
                "past",
                "--prompt_language",
                "en",
                "--prompt_gen_model",
                "gpt-4o-mini",
                "--prompt_judge_model",
                "gpt-4o-mini",
            ],
            "console": "integratedTerminal",
            "justMyCode": True,
            "pythonArgs": ["-u"]
        }
    ]
} 